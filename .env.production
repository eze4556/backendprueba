# ===========================================
# CONFIGURACIÓN DE ENTORNO DE PRODUCCIÓN
# LikeVendor Backend System
# ===========================================

# Entorno
NODE_ENV=production

# Servidor
PORT=3000
HOST=0.0.0.0

# Base de datos MongoDB
MONGODB_URI=mongodb://production-db-host:27017/likevendor_prod
MONGODB_CONNECTION_STRING=mongodb://production-db-host:27017/likevendor_prod

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-for-production-256-bits-minimum
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-for-production-256-bits
JWT_REFRESH_EXPIRES_IN=7d

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-production-aws-access-key
AWS_SECRET_ACCESS_KEY=your-production-aws-secret-key
AWS_S3_BUCKET=likevendor-production-bucket
AWS_MEDIALIVE_CHANNEL_ID=your-production-medialive-channel-id
AWS_MEDIAPACKAGE_URL=https://your-mediapackage-endpoint.amazonaws.com

# Email Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your-production-email@domain.com
MAIL_PASS=your-production-email-password
MAIL_FROM=noreply@likevendor.com

# Payment Gateways
PAYPAL_CLIENT_ID=your-production-paypal-client-id
PAYPAL_CLIENT_SECRET=your-production-paypal-client-secret
PAYPAL_MODE=live

STRIPE_PUBLISHABLE_KEY=pk_live_your-production-stripe-publishable-key
STRIPE_SECRET_KEY=sk_live_your-production-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-production-stripe-webhook-secret

MERCADOPAGO_ACCESS_TOKEN=your-production-mercadopago-access-token
MERCADOPAGO_PUBLIC_KEY=your-production-mercadopago-public-key

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
BCRYPT_SALT_ROUNDS=12

# CORS Configuration
CORS_ORIGIN=https://yourdomain.com,https://admin.yourdomain.com
CORS_CREDENTIALS=true

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/likevendor/app.log
AUDIT_LOG_PATH=/var/log/likevendor/audit.log

# Health Check
HEALTH_CHECK_TIMEOUT=30000

# Bot Detection
BOT_DETECTION_ENABLED=true
BOT_DETECTION_STRICT_MODE=true

# Geo Blocking
GEO_BLOCKING_ENABLED=true
ALLOWED_COUNTRIES=US,CA,MX,AR,BR,CL,CO,PE,UY
BLOCKED_COUNTRIES=CN,RU,KP

# SSL/TLS
SSL_ENABLED=true
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key

# Monitoring
MONITORING_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30000

# Cache
REDIS_URL=redis://production-redis-host:6379
CACHE_TTL=3600

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/var/uploads/likevendor

# API Documentation
SWAGGER_ENABLED=false
API_DOCS_PATH=/api/docs

# External Services
GOOGLE_MAPS_API_KEY=your-production-google-maps-api-key
TWILIO_ACCOUNT_SID=your-production-twilio-account-sid
TWILIO_AUTH_TOKEN=your-production-twilio-auth-token

# Database Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_S3_BUCKET=likevendor-backups-prod

# Performance
DATABASE_POOL_SIZE=10
REQUEST_TIMEOUT=30000
WORKER_PROCESSES=auto