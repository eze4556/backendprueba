# Configuración de Desarrollo para Test-Lv Backend
# Este archivo contiene variables de entorno para desarrollo local

# ===== CONFIGURACIÓN DEL SERVIDOR =====
NODE_ENV=development
PORT=3000
HOST=localhost

# ===== BASE DE DATOS =====
MONGODB_URI=mongodb://localhost:27017/test-lv-dev

# ===== AUTENTICACIÓN JWT =====
JWT_SECRET=dev-secret-key-change-in-production-this-is-not-secure
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# ===== CONFIGURACIÓN DE SEGURIDAD =====
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# ===== CORS =====
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:4200

# ===== AWS (Opcional para desarrollo) =====
AWS_ACCESS_KEY_ID=development-key
AWS_SECRET_ACCESS_KEY=development-secret
AWS_REGION=us-east-1
AWS_S3_BUCKET=test-lv-dev-bucket

# ===== PAGOS (Sandbox/Test) =====
STRIPE_SECRET_KEY=sk_test_development_key
STRIPE_WEBHOOK_SECRET=whsec_development_webhook_secret
PAYPAL_CLIENT_ID=development_paypal_client_id
PAYPAL_CLIENT_SECRET=development_paypal_client_secret
PAYPAL_MODE=sandbox

# ===== MEDIA Y STREAMING =====
AWS_MEDIA_LIVE_CHANNEL_ID=development-channel
AWS_MEDIA_PACKAGE_URL=https://development.mediapackage.us-east-1.amazonaws.com

# ===== MONITOREO Y LOGS =====
LOG_LEVEL=debug
HEALTH_CHECK_TIMEOUT=10000

# ===== NOTIFICACIONES =====
EMAIL_SERVICE=development
EMAIL_USER=dev@test-lv.com
EMAIL_PASSWORD=dev-password
EMAIL_FROM=noreply@test-lv.com

# ===== UPLOADS =====
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# ===== FEATURES FLAGS =====
ENABLE_RATE_LIMITING=false
ENABLE_GEO_BLOCKING=false
ENABLE_BOT_DETECTION=false
ENABLE_AUDIT_LOGGING=true